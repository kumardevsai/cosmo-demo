<?xml version="1.0" encoding="utf-8" ?>
<!--
 * This is the sample templates definitions file. It makes the "templates"
 * command completely customizable.
 *
 * See FCKConfig.TemplatesXmlPath in the configuration file.
-->
<Templates imagesBasePath="fck_template/images/">
	<Template title="图片型" image="template1.gif">
		<Description>内容中包含图片</Description>
		<Html>
			<![CDATA[
				<img style="MARGIN-RIGHT: 10px" height="100" alt="" width="100" align="left"/>
				<h3>填写标题</h3>
				填写内容
			]]>
		</Html>
	</Template>
	<Template title="双峰型" image="template2.gif">
		<Description>将内容分成两个区域，每个区域有各自的标题和内容</Description>
		<Html>
			<![CDATA[
				<table cellspacing="0" cellpadding="0" width="100%" border="0">
					<tbody>
						<tr>
							<td width="50%">
							<h3>标题 1</h3>
							</td>
							<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </td>
							<td width="50%">
							<h3>标题 2</h3>
							</td>
						</tr>
						<tr>
							<td>文本 1</td>
							<td>&nbsp;</td>
							<td>文本 2</td>
						</tr>
					</tbody>
				</table>
				其它内容
			]]>
		</Html>
	</Template>
	<Template title="表格型" image="template3.gif">
		<Description>内容中包含表格</Description>
		<Html>
			<![CDATA[
				<table align="left" width="80%" border="0" cellspacing="0" cellpadding="0"><tr><td>
					<h3>填写标题</h3>
					<p>
					<table style="FLOAT: right" cellspacing="0" cellpadding="0" width="150" border="1">
						<tbody>
							<tr>
								<td align="center" colspan="3"><strong>表格标题</strong></td>
							</tr>
							<tr>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
							</tr>
							<tr>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
							</tr>
							<tr>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
							</tr>
							<tr>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
							</tr>
						</tbody>
					</table>
					填写内容</p>
				</td></tr></table>
			]]>
		</Html>
	</Template>
</Templates>
